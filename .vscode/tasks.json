{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Hugo: Split Editor Right",
            "type": "shell",
            "command": "echo ${input:splitEditorRight}",
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "echo": false,
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Hugo: Open Preview",
            "type": "shell",
            "command": "echo ${input:openSimpleBrowser}",
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "echo": false,
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Hugo: Preview Right",
            "dependsOn": [
                "Hugo: Split Editor Right",
                "Hugo: Open Preview"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Git: Quick Push",
            "type": "shell",
            "command": "git add -A; git diff --cached --quiet; if ($LASTEXITCODE -ne 0) { git commit -m \"sync\" } else { Write-Host \"No changes to commit.\" }; git push",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "echo": false,
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "Hugo Server",
            "type": "shell",
            "command": "hugo-obsidian -input=content -output=assets/indices -index -root=. ; hugo server -D --disableFastRender --ignoreCache",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting Hugo server...",
                    "endsPattern": "Web Server is available at http://localhost:1313/"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Hugo: Full Preview",
            "dependsOn": [
                "Hugo Server",
                "Hugo: Split Editor Right",
                "Hugo: Open Preview"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Hugo Server Silent",
            "type": "shell",
            "command": "Write-Host 'Starting Hugo server...'; hugo-obsidian -input=content -output=assets/indices -index -root=. ; hugo server -D --disableFastRender --ignoreCache",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting Hugo server...",
                    "endsPattern": "Web Server is available at http://localhost:1313/"
                }
            },
            "presentation": {
                "reveal": "silent",
                "panel": "new"
            }
        },
        {
            "label": "Open Localhost",
            "type": "shell",
            "command": "start http://localhost:1313",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "echo": false,
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "Kill Hugo",
            "type": "shell",
            "command": "Stop-Process -Name hugo -Force -ErrorAction SilentlyContinue; exit 0",
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "close": true
            }
        },
        {
            "label": "Git: Reset Hard",
            "type": "shell",
            "command": "powershell -Command \"$wshell = New-Object -ComObject WScript.Shell; $result = $wshell.Popup('Are you sure you want to reset the repository? This will discard all uncommitted changes.', 0, 'Confirm Reset', 4 + 48); if ($result -eq 6) { git reset --hard HEAD } else { Write-Host 'Reset cancelled.' }\"",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "echo": false,
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "Serve & Open",
            "dependsOn": [
                "Kill Hugo",
                "Hugo Server Silent"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "splitEditorRight",
            "type": "command",
            "command": "workbench.action.splitEditorRight"
        },
        {
            "id": "openSimpleBrowser",
            "type": "command",
            "command": "simpleBrowser.show",
            "args": [
                "http://localhost:1313"
            ]
        }
    ]
}